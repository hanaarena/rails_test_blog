<%= render :partial => @post %>
<h2>Comments</h2>
<% @post.comments.each do |comment| %>
	<div id="comment">
		<p>
			<b>Commented <%= time_ago_in_words(comment.created_at) %></b>
			<br />
			<%= comment.content %>
		</p>
	</div>
<% end %>

<%= form_for [@post, Comment.new] do |f| %>
	<p>
		<%= f.label :content, "New comment" %>
		<%= f.text_area :content %>
	</p>
	<P><%= f.submit "Ok"%></P>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
